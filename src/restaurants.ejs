---
layout: layout/mylayout.ejs
title: Restaurants

pagination:
    data: rs
    size: 1
    alias: post
---

<div class="container mt-5">
    <h1 class="display-1 text-center mb-4 text-dark">Restaurant Review</h1>
    <div class="row justify-content-center">
        <% pagination.items.forEach(post => { %>
            <div class="card mb-5 border-0" style="width: 80%; max-width: 600px; background-color: #f8f9fa;">
                <div class="card-header bg-dark text-white text-center">
                    <h2 class="card-title m-0"><%= post.Name %></h2>
                </div>
                <div class="card-body text-dark" style="color: #333;">
                    <p class="card-text"><strong>Address:</strong> <%= post.Location %></p>
                    <p class="card-text"><strong>Rating:</strong> <%= post.Rating || "No Rating Available" %></p>
                    <hr style="border-color: #333;">
                    <p class="card-text text-start"><%= post.Description || "No description available" %></p>
                </div>
                <div class="card-footer text-muted text-end">
                    <small>Reviewed on <%= new Date(post.createdAt).toLocaleDateString() %></small>
                </div>
            </div>
        <% }); %>
    </div>
</div>
